<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="MainGrid" TargetType="Grid">
        <Setter Property="Background" Value="#FFFFFF "/>
    </Style>

    <Style x:Key="ScdGrid" TargetType="Grid">
        <Setter Property="Background" Value="#F4E8D3"/>
    </Style>

    <Style x:Key="MainBtn" TargetType="Button">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="Width" Value="100"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
        <Setter Property="Background" Value="#67BA80"/>
    </Style>

    <Style x:Key="MainLabel" TargetType="Label">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="Width" Value="40"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
    </Style>

    <Style x:Key="MainTextBox" TargetType="TextBox">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="Width" Value="50"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
    </Style>

    <Style x:Key="MainCB" TargetType="ComboBox">
        <Setter Property="FontSize" Value="18"/>
        <Setter Property="Width" Value="50"/>
        <Setter Property="Height" Value="30"/>
        <Setter Property="FontFamily" Value="Segoe UI"/>
    </Style>


</ResourceDictionary>